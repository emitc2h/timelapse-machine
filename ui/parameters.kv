#:import selector ui.selector
#:import parameters ui.parameters

<Parameters@BoxLayout>:

    ui_codec:    _codec
    ui_fps:      _fps
    ui_ratio:    _ratio
    ui_width:    _width
    ui_height:   _height
    ui_original: _original

    orientation: 'vertical'
    size_hint_y: None
    height: 301
    spacing: 9
    padding: 7
    canvas.before:
        Color:
            rgb: 0.1, 0.1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgb: 0.2, 0.2, 0.2
        Line:
            rectangle: self.pos[0], self.pos[1], self.width, self.height
            width: 2
    CodecSelector:
        id: _codec
    BoxLayout:
        spacing: 5
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'frames per second'
            color: 1,1,1,0.7
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        TextInput:
            id: _fps
            text: str(root.fps_default)
            multiline: False
            halign: 'center'
            valign: 'middle'
            size_hint_x: None
            width: 120
            on_text_validate: root.enter_fps()
    BoxLayout:
        spacing: 5
        padding: 0,0,5,0
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'keep aspect ratio'
            color: 1,1,1,0.7
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        CheckBox:
            id: _ratio
            size_hint_x: None
            width: 40
            canvas:
                Color:
                    rgb: 0.2, 0.2, 0.2
                Line:
                    rectangle: self.pos[0], self.pos[1], self.width, self.height
                    width: 2
    BoxLayout:
        spacing: 5
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'width'
            color: 1,1,1,0.7
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        TextInput:
            id: _width
            text: 'None'
            multiline: False
            halign: 'center'
            valign: 'middle'
            size_hint_x: None
            width: 120
            on_text_validate: root.enter_width()
    BoxLayout:
        spacing: 5
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'height'
            color: 1,1,1,0.7
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        TextInput:
            id: _height
            text: 'None'
            multiline: False
            halign: 'center'
            valign: 'middle'
            size_hint_x: None
            width: 120
            on_text_validate: root.enter_height()
    Button:
        id: _original
        size_hint_y: None
        height: 40
        text: 'original size'
        on_press: root.default()