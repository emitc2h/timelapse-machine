#:import selector ui.selector
#:import parameters ui.parameters

<Parameters@BoxLayout>:

    set_codec: _set_codec
    set_fps: _set_fps
    keep_aspect_ratio: _keep_aspect_ratio
    set_width: _set_width
    set_height: _set_height
    button_original_size: _button_original_size

    orientation: 'vertical'
    size_hint_y: None
    height: 301
    spacing: 9
    padding: 7
    canvas.before:
        Color:
            rgb: 0.1, 0.1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgb: 0.2, 0.2, 0.2
        Line:
            rectangle: self.pos[0], self.pos[1], self.width, self.height
            width: 2
    CodecSelector:
        id: _set_codec
    BoxLayout:
        spacing: 5
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'frames per second'
            color: 1,1,1,0.7
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        TextInput:
            id: _set_fps
            text: str(root.fps_default)
            multiline: False
            halign: 'center'
            valign: 'middle'
            size_hint_x: None
            width: 120
            on_text_validate: root.enter_fps()
    BoxLayout:
        spacing: 5
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'keep aspect ratio'
            color: 1,1,1,0.7
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        CheckBox:
            id: _keep_aspect_ratio
            size_hint_x: None
            width: 40
            canvas:
                Color:
                    rgb: 0.2, 0.2, 0.2
                Line:
                    rectangle: self.pos[0], self.pos[1], self.width, self.height
                    width: 2
    BoxLayout:
        spacing: 5
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'width'
            color: 1,1,1,0.7
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        TextInput:
            id: _set_width
            text: '900'
            multiline: False
            halign: 'center'
            valign: 'middle'
            size_hint_x: None
            width: 120
    BoxLayout:
        spacing: 5
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'height'
            color: 1,1,1,0.7
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        TextInput:
            id: _set_height
            text: '600'
            multiline: False
            halign: 'center'
            valign: 'middle'
            size_hint_x: None
            width: 120
    Button:
        id: _button_original_size
        size_hint_y: None
        height: 40
        text: 'original size'