#: import topbar ui.topbar

<TopBar>:

    ui_path:   _path
    ui_open:   _open
    ui_save:   _save
    ui_render: _render
    ui_cancel: _cancel

    orientation: 'horizontal'
    padding: 7
    spacing: 5
    canvas.before:
        Color:
            rgb: 0.2, 0.2, 0.2
        Line:
            rectangle: self.pos[0], self.pos[1], self.width, self.height
            width: 2
    Button:
        id: _open
        text: 'open'
        size_hint_x: None
        width: 150
    Label:
        id: _path
        text: '    Click \'open\' to find the directory containing your sequence'
        color: 1,1,1,0.5
        halign: 'left'
        valign: 'middle'
        text_size: self.size
    Button:
        id: _cancel
        text: 'cancel'
        size_hint_x: None
        width: 150
        #on_press: root.tlm.test_button()
    Button:
        id: _save
        text: 'save'
        size_hint_x: None
        width: 150
    Button:
        id: _render
        text: 'render'
        size_hint_x: None
        width: 150
