<ProcessorList@StackLayout>:
    Label:
        text: str('Am I scrolling like I am supposed to? '*50)
        text_size: self.width, None

<ProcessorSettings@StackLayout>:
    Label:
        height: 100
        width: self.width
        text_size: self.size
        text: 'Setting 1'
        halign: 'left'
    Slider:
        height: 60
        width: self.width
    BoxLayout:
        orientation: 'horizontal'
        CheckBox:
            size: self.size
            size_hint: None,None
        Label:
            text_size: self.size
            text: 'Setting 2'
            halign: 'left'
            valign: 'middle'


