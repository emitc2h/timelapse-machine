<Basic@BoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: 301
    spacing: 9
    padding: 7
    canvas.before:
        Color:
            rgb: 0.2, 0.2, 0.2
        Line:
            rectangle: self.pos[0], self.pos[1], self.width, self.height
            width: 2
    CodecSelector:
        id: _code_selector
    BoxLayout:
        spacing: 5
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'frames per second'
            color: 1,1,1,0.7
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        TextInput:
            text: '24.0'
            multiline: False
            halign: 'center'
            valign: 'middle'
            size_hint_x: None
            width: 120
    BoxLayout:
        spacing: 5
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'keep aspect ratio'
            color: 1,1,1,0.7
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        CheckBox:
            size_hint_x: None
            width: 40
            canvas:
                Color:
                    rgb: 0.2, 0.2, 0.2
                Line:
                    rectangle: self.pos[0], self.pos[1], self.width, self.height
                    width: 2
    BoxLayout:
        spacing: 5
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'width'
            color: 1,1,1,0.7
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        TextInput:
            text: '900'
            multiline: False
            halign: 'center'
            valign: 'middle'
            size_hint_x: None
            width: 120
    BoxLayout:
        spacing: 5
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'height'
            color: 1,1,1,0.7
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        TextInput:
            text: '600'
            multiline: False
            halign: 'center'
            valign: 'middle'
            size_hint_x: None
            width: 120
    Button:
        size_hint_y: None
        height: 40
        text: 'original size'