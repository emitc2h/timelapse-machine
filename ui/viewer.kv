#:import viewer ui.viewer

<Controls>:
    
    begin:   _begin
    back:    _back
    reverse: _reverse
    pause:   _pause
    play:    _play
    forward: _forward
    end:     _end

    orientation: 'horizontal'
    height: 100
    size_hint_y: None
    padding: 0.5*(self.width - 7*79 + 1), 15, 0.5*(self.width - 7*79 + 1), 25
    BoxLayout:
        size: 79, root.height
        size_hint: None, None
        Button:
            id: _begin
            size: 49,60
            size_hint: None, None
            border: [0,0,0,0]
            background_disabled_normal: 'img/button_begin_disabled.png'
            background_normal: 'img/button_begin.png'
            background_down: 'img/button_begin_pressed.png'
            disabled: True
    BoxLayout:
        size: 79, root.height
        size_hint: None, None
        Button:
            id: _back
            size: 49,60
            size_hint: None, None
            border: [0,0,0,0]
            background_disabled_normal: 'img/button_back_disabled.png'
            background_normal: 'img/button_back.png'
            background_down: 'img/button_back_pressed.png'
            disabled: True
    BoxLayout:
        size: 79, root.height
        size_hint: None, None
        Button:
            id: _reverse
            size: 49,60
            size_hint: None, None
            border: [0,0,0,0]
            background_disabled_normal: 'img/button_reverse_disabled.png'
            background_normal: 'img/button_reverse.png'
            background_down: 'img/button_reverse_pressed.png'
            disabled: True
    BoxLayout:
        size: 80, root.height
        size_hint: None, None
        Button:
            id: _pause
            size: 50,60
            size_hint: None, None
            border: [0,0,0,0]
            background_disabled_normal: 'img/button_pause_disabled.png'
            background_normal: 'img/button_pause.png'
            background_down: 'img/button_pause_pressed.png'
            disabled: True
    BoxLayout:
        size: 79, root.height
        size_hint: None, None
        Button:
            id: _play
            size: 49,60
            size_hint: None, None
            border: [0,0,0,0]
            background_disabled_normal: 'img/button_play_disabled.png'
            background_normal: 'img/button_play.png'
            background_down: 'img/button_play_pressed.png'
            disabled: True
    BoxLayout:
        size: 79, root.height
        size_hint: None, None
        Button:
            id: _forward
            size: 49,60
            size_hint: None, None
            border: [0,0,0,0]
            background_disabled_normal: 'img/button_forward_disabled.png'
            background_normal: 'img/button_forward.png'
            background_down: 'img/button_forward_pressed.png'
            disabled: True
    BoxLayout:
        size: 79, root.height
        size_hint: None, None
        Button:
            id: _end
            size: 49,60
            size_hint: None, None
            border: [0,0,0,0]
            background_disabled_normal: 'img/button_end_disabled.png'
            background_normal: 'img/button_end.png'
            background_down: 'img/button_end_pressed.png'
            disabled: True


<Viewer>:
    ui_screen:  _screen
    ui_slider:  _slider
    ui_begin:   _controls.begin
    ui_back:    _controls.back
    ui_reverse: _controls.reverse
    ui_pause:   _controls.pause
    ui_play:    _controls.play
    ui_forward: _controls.forward
    ui_end:     _controls.end
    orientation: 'vertical'
    padding: 10, 10, 10, 10
    Image:
        id: _screen
        allow_stretch: True
        source: 'img/tlm_logo.png'
    RelativeLayout:
        size_hint_y: None
        height: 70
        Slider:
            id: _slider
            min: 0
            max: 1
            value: 0
            disabled: True
            on_value: root.update_frame(self.value)
    Controls:
        id: _controls