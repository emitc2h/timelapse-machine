<TLM>:
    path: _top_bar.path
    button_open: _top_bar.button_open
    button_save: _top_bar.button_save
    button_render: _top_bar.button_render

    BoxLayout:
        canvas.before:
            Color:
                rgb: 0.1, 0.1, 0.1
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        padding: 5
        spacing: 7
        AnchorLayout:
            anchor_y: 'top'
            anchor_x: 'left'
            size_hint_y: None
            height: 60
            TopBar:
                id: _top_bar
        BoxLayout:
            orientation: 'horizontal'
            spacing: 7
            BoxLayout:
                orientation: 'vertical'
                spacing: 7
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 7
                    AnchorLayout:
                        anchor_y: 'top'
                        anchor_x: 'left'
                        size_hint_x: None
                        width: 500
                        Basic:
                            id: _basic
                    RelativeLayout:
                        canvas.before:
                            Color:
                                rgb: 0,0,0
                            Rectangle:
                                size: self.size
                                pos: 0,0
                        Image:
                            pos: 0,0
                            size: self.size
                            allow_stretch: True
                            source: 'tlm_logo.png'
                AnchorLayout:
                    anchor_y: 'bottom'
                    anchor_x: 'left'
                    size_hint_y: None
                    height: 500
                    CurveEditor:
                        id: _curve_editor
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'top'
                size_hint_x: None
                width: 500
                Configuration:
                    id: _configuration

<OpenDialog>:

    button_cancel: _button_cancel
    button_load: _button_load
    filebrowser: _filebrowser


    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileBrowser:
            id: _filebrowser
            dirselect: True
        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                id: _button_cancel
                text: "Cancel"
            Button:
                id: _button_load
                text: "Load"