<TLM>:
    topbar: _top_bar
    viewer: _viewer
    parameters: _parameters

    BoxLayout:
        canvas.before:
            Color:
                rgb: 0.1, 0.1, 0.1
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        padding: 5
        spacing: 7
        AnchorLayout:
            anchor_y: 'top'
            anchor_x: 'left'
            size_hint_y: None
            height: 60
            TopBar:
                id: _top_bar
                tlm: root
        BoxLayout:
            orientation: 'horizontal'
            spacing: 7
            BoxLayout:
                orientation: 'vertical'
                spacing: 7
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 7
                    AnchorLayout:
                        anchor_y: 'top'
                        anchor_x: 'left'
                        size_hint_x: None
                        width: 600
                        BoxLayout:
                            orientation: 'vertical'
                            spacing: 7
                            Parameters:
                                id: _parameters
                            BoxLayout:
                                orientation: 'vertical'
                    RelativeLayout:
                        canvas.before:
                            Color:
                                rgb: 0,0,0
                            Rectangle:
                                size: self.size
                                pos: 0,0
                        Viewer:
                            id: _viewer
                            parameters: _parameters
                AnchorLayout:
                    anchor_y: 'bottom'
                    anchor_x: 'left'
                    size_hint_y: None
                    height: 400
                    CurveEditor:
                        id: _curve_editor
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'top'
                size_hint_x: None
                width: 500
                Configuration:
                    id: _configuration

<OpenDialog>:

    filebrowser: _filebrowser

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileBrowser:
            id: _filebrowser
            dirselect: True